<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DiagnosticoActivity"
    android:background="@color/colorAccent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_doenca"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Zica"
            android:textSize="40sp"
            android:layout_alignTop="@+id/iv_diagnostico"
            android:textAlignment="center"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/iv_diagnostico"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="68dp"
            android:src="@mipmap/prancheta"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/list_symptom_title"
            android:textSize="20dp"
            android:layout_weight="2.08"
            android:layout_below="@+id/tv_doenca"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:id="@+id/tv_sintomas" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text="Sintomas1"
            android:textSize="20dp"
            android:layout_weight="2.08"
            android:layout_below="@+id/tv_sintomas"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_sintoma1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text="Sintomas2"
            android:textSize="20dp"
            android:layout_weight="2.08"
            android:layout_below="@+id/tv_sintoma1"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_sintoma2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text="Sintomas3"
            android:textSize="20dp"
            android:layout_weight="2.08"
            android:layout_below="@+id/tv_sintoma2"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_sintoma3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/go_to_hospital_button_title"
            android:textColor="@color/white"
            android:id="@+id/bt_ir_para_medico"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/tv_sintoma3"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
